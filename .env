# =============================================================================
# Cloud Python Execution Platform - Configuration
# ENSAM Rabat - Cloud Computing 2025
# =============================================================================
# Copy this file to .env and adjust values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="ENSAM Cloud Platform"
APP_VERSION="1.0.0"
DEBUG=true

# -----------------------------------------------------------------------------
# Security - JWT Configuration
# Generate a secure key with: openssl rand -hex 32
# -----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# Database Configuration
# SQLite for development, PostgreSQL for production
# -----------------------------------------------------------------------------
# SQLite (development):
DATABASE_URL=sqlite:///./data/cloud_platform.db

# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/cloud_platform

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
DOCKER_IMAGE_CPU=python:3.11-slim
DOCKER_IMAGE_GPU=tensorflow/tensorflow:2.15.0-gpu
DOCKER_NETWORK=cloud-platform-network

# Maximum concurrent containers
MAX_CONCURRENT_JOBS=5

# -----------------------------------------------------------------------------
# Storage Paths
# -----------------------------------------------------------------------------
SCRIPTS_DIR=./data/scripts
LOGS_DIR=./data/logs
RESULTS_DIR=./data/results

# -----------------------------------------------------------------------------
# CORS Configuration
# Comma-separated list of allowed origins
# -----------------------------------------------------------------------------
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Rate Limiting (requests per minute per IP)
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Prometheus Metrics
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PREFIX=ensam_cloud

# -----------------------------------------------------------------------------
# GPU Configuration
# Set to false if no NVIDIA GPU is available
# -----------------------------------------------------------------------------
GPU_ENABLED=true
NVIDIA_VISIBLE_DEVICES=all

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO





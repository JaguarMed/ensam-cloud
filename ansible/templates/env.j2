# ENSAM Cloud Platform - Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# =============================================================================
# Security
# =============================================================================
SECRET_KEY={{ secret_key | default('change-this-in-production') }}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite:///./data/cloud_platform.db
# Pour PostgreSQL en production:
# DATABASE_URL=postgresql://user:password@localhost:5432/ensam_cloud

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_IMAGE_CPU=python:3.11-slim
DOCKER_IMAGE_GPU=tensorflow/tensorflow:2.15.0-gpu
DOCKER_NETWORK=ensam-network
GPU_ENABLED={{ gpu_enabled | default(false) | string | lower }}

# =============================================================================
# Resource Profiles
# =============================================================================
RESOURCE_PROFILES={"small":{"memory_mb":512,"cpu_shares":512,"timeout":60},"medium":{"memory_mb":2048,"cpu_shares":1024,"timeout":300},"large":{"memory_mb":4096,"cpu_shares":2048,"timeout":900},"gpu":{"memory_mb":8192,"cpu_shares":2048,"timeout":1800,"gpu":true}}

# =============================================================================
# Storage Paths
# =============================================================================
SCRIPTS_DIR=./data/scripts
LOGS_DIR=./data/logs
RESULTS_DIR=./data/results

# =============================================================================
# CORS & Security
# =============================================================================
CORS_ORIGINS=["http://localhost:8000","http://{{ ansible_host | default('localhost') }}:8000","https://{{ domain_name | default('localhost') }}"]

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Metrics
# =============================================================================
METRICS_ENABLED=true
METRICS_PREFIX=ensam_cloud

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

